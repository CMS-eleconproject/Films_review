<div class="header">
  <h1 class="inline">Film Reviews</h1>
  <link rel="stylesheet" href="index.css">
  <% if current_user %>
    <div class="flex-end">
      <%= link_to "New Film", new_film_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


<ul class="films-list">
<div class="films-container">
  <% @films.each do |film| %>
    <div class="film-card">
      <div class="card-body">
        <div class="film-poster">
          <%= image_tag film.poster_url, size: "100x150", class: "img-fluid", alt: film.title %>
        </div>
        <div class="film-details">
          <h3><%= link_to film.title, film_path(film) %></h3>
          <p>Directed by: <%= film.director %></p>
          <p>Released: <%= film.release_date %></p>
          <% if current_user && current_user == film.user %>
            <div class="film-actions">
              <%= link_to "Edit", edit_film_path(film), class: "btn btn-sm btn-info" %>
              <%= button_to "Delete", film_path(film), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this film?" }, class: "btn btn-sm btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

</ul>
